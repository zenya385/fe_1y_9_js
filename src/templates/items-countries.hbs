{{#each this}}
  <li class='gallery__item'>
    <div class='gallery__thumb'>
      <img src='{{flag}}' alt='Прапор {{name}}' width='320' />
    </div>
    <h2>{{name}}</h2>
    <p><b>Столиця: {{capital}}</b> </p>
    <p><b>Валюта:</b> {{currency}}</p>
    <p><b>Офіційна мова:</b> {{language}}</p>
    <p><b>Населення:</b> {{population}} людей</p>

    {{#if infected}}
      <p style='color: red;'>Все пропало!!!!!!!!!!!!!!!!!!!!!!!!</p>
    {{/if}}

    {{#unless infected}}
      <p style='color: green;'>Фух, пронесло</p>
    {{/unless}}
  </li>

{{/each}}